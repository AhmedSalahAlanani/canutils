
BUILD_DIR  := build
SOURCE_DIR := src

CMAKE_OPTIONS := -DUSE_GCOV=TRUE
CMAKE_OPTIONS += -DBUILD_EXAMPLE=TRUE
CMAKE_OPTIONS += -DBUILD_TEST=TRUE
CMAKE_OPTIONS += -DBUILD_DOC=TRUE
CMAKE_OPTIONS += -DBUILD_PARNOID=TRUE
.PHONY: all
all:
	@mkdir -p $(BUILD_DIR)
	@(cd $(BUILD_DIR) && \
		cmake .. $(CMAKE_OPTIONS) \
	)
	@$(MAKE) -C $(BUILD_DIR) all

.PHONY: clean
clean:
	@$(MAKE) -C $(BUILD_DIR) clean

.PHONY: dist-clean
dist-clean:
	@rm -rf $(BUILD_DIR)